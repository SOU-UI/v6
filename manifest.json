{
  "manifest_version": 3,
  "name": "YouTube Interactive Extension",
  "version": "1.0",
  "description": "対話型YouTube拡張機能",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
